<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >
    <com.orangelittle.u17.util.PullToRefresh
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rec_PullToRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:dividerHeight="4dp"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:smoothScrollbar="true"
        ptr:ptrMode="pullDownFromTop"
        />

    <RelativeLayout
        android:id="@+id/search_layout1"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/search_btn"
            android:layout_marginRight="15dp"
            android:src="@mipmap/main_search"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_marginLeft="5dp"
            android:layout_height="30dp" />

        <EditText
            android:id="@+id/search_Editext"
            android:hint="输入搜索"
            android:focusable="false"
            android:textColor="#f5f5f5"
            android:textColorHint="#f5f5f5"
            android:singleLine="true"
            android:imeOptions="actionGo"
            android:layout_toLeftOf="@id/search_btn"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:background="@drawable/search_round_bg"
            android:layout_height="30dp" />
       <ImageView
           android:id="@+id/searchchanged_btn"
           android:layout_width="60dp"
           android:visibility="invisible"
           android:layout_height="60dp"
           android:src="@mipmap/searched_bg"
           android:layout_gravity="right|top"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:layout_marginTop="1dp"
           android:layout_alignParentTop="true"
           android:layout_toEndOf="@+id/search_Editext"
           />

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
