<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<com.facebook.drawee.view.SimpleDraweeView
    android:id="@+id/rec_image"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    fresco:viewAspectRatio="1.75"
    fresco:placeholderImage="@mipmap/u17_default_comic_cover_bg"
    fresco:placeholderImageScaleType="fitXY"
    />

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/rec_title"
            tools:text="lalalaba"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/rec_line"
            android:layout_width="100dp"
            android:layout_below="@id/rec_title"
            android:layout_marginTop="5dp"
            android:background="@color/rec_line"
            android:layout_height="2dp"/>
        <TextView
            android:id="@+id/rec_subtitle"
            android:layout_below="@id/rec_line"
            android:layout_marginTop="5dp"
            tools:text="lalalaba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/rec_jian"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</LinearLayout>