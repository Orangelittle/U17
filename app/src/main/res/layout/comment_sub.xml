<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/comment_touxiang"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:placeholderImage="@mipmap/user_default_header"
        app:roundAsCircle="true"
        tools:background="@mipmap/ic_launcher"
        />
    <TextView
        android:id="@+id/comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/comment_touxiang"
        tools:text="jsfdjd"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/comment_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="回复"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/comment_likecount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="fjlsdfj"
        android:textSize="20sp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/comment_reply"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/u17_like_normal"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/comment_likecount"
        />
    <TextView
        android:id="@+id/comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        tools:text="fjsfjls"
        android:layout_below="@id/comment_touxiang"
        android:layout_alignLeft="@id/comment_name"
        />
</RelativeLayout>